pipeline {
  agent any 
  tools {
    maven 'Maven'
  }
  
  stages {
    stage('Initialize') {
      steps {
        sh '''
          echo "PATH = ${PATH}"
          echo "M2_HOME = ${M2_HOME}"
          '''
      }
    }

    stage ('Check-Git-Secrets') {
      steps {
        sh 'rm trufflehog || true'
        sh 'docker run gesellix/trufflehog --json https://github.com/Oussama-Ghodhbani/summer_proj.git > trufflehog'
        sh 'cat trufflehog'
      }
    }

    stage('Source Composition Analysis') {
    steps {
        // Remove existing reports
        sh 'rm owasp* || true'

        // Download Dependency-Check script
        sh 'wget "https://raw.githubusercontent.com/Oussama-Ghodhbani/summer_proj/master/owasp-dependency-check.sh" ' || true

        // Set execute permissions
        sh 'chmod +x owasp-dependency-check.sh' || true

        // Run Dependency-Check script
        sh 'bash owasp-dependency-check.sh' || true

        // Display Dependency-Check report
        sh 'cat /var/lib/jenkins/OWASP-Dependency-Check/reports/dependency-check-report.xml' || true
        }
    }


    stage('Build') {
      steps {
        
          sh 'mvn clean package'
        
      }
    }
    stage ('Deploy-To-Tomcat') {
            steps {
           sshagent(['oussama']) {
                sh 'scp -o StrictHostKeyChecking=no target/*.war oussama@192.168.5.135:/prod/apache-tomcat-9.0.79/webapps/webapp.war'
              }      
           }       
    }
  }
}
